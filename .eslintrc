env:
    browser: true
    node: true
    es6: true
    mocha: true

parser: babel-eslint

extends: airbnb

rules:
    comma-dangle:
      - 2
      - never
    react/jsx-no-bind: 0
    react/prefer-stateless-function: 0
    no-unused-expressions: 0
    new-cap:
      - 2
      - capIsNewExceptions:
        - http.Server
        - express.Router
        - Map
        - List
    no-underscore-dangle:
      - 2
      - allow:
        - __Rewire__
        - __ResetDependency__