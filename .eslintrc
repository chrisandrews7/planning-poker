env:
    browser: true
    node: true
    es6: true
    mocha: true

parser: babel-eslint

extends: airbnb

rules:
    comma-dangle: [1, "never"]
    strict: 0
    react/jsx-no-bind: 0
    react/prefer-stateless-function: 0
    no-unused-expressions: 0
    new-cap: [1, {"capIsNewExceptions": ["http.Server", 'express.Router']}]
